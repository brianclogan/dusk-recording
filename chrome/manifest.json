{
  "name": "Laravel Dusk Screenrecorder",
  "action": {},
  "description": "Build an Extension!",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["script.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "screenrecorder.js" ],
      "matches": ["<all_urls>"]
    }
  ]
}
